FROM ubuntu:20.04

ENV TZ=Europe/Budapest
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone
RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y \
  make \
  g++ \
  gcc \
  libgtest-dev \
  cmake \
  build-essential \
&& rm -rf /var/lib/apt/lists/*